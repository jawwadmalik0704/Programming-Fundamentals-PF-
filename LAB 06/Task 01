#include<stdio.h>
int main(){
	char ans;
	int num,count_even=0,count_odd=0;
	do{
		printf("Entered a number: ");
		scanf(" %d",&num);
		if(num%2==0){
			printf("The number you entered is even\n");
			count_even++;
		}
		else{
			printf("The number you entered is odd\n");
			count_odd++;
		}
		


     printf("Do you want to continue?(y for yes and n for no): ");
	 scanf(" %c",&ans);	
	}while( ans=='y');
	    printf(" You Entered an even number %dtimes\n",count_even);
		printf(" You Entered a odd number %dtimes\n",count_odd);
	
	return 0;
}
